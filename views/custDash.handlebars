<div class="header">
    <h1>{{first_name}} {{last_name}}'s Dash</h1>
    
</div>

<main>
    
    <section class="card text-center col-sm-10 col-md-5 col-lg-5">
        {{#if vehicles.length }}
        <div class="card-header">
            <h3>Car Details</h3>
        </div>
            {{#each vehicles as |vehicle| }}
        <div>
            <div class="card-body">
                <div>
                    <h4 class="card-title">
                        {{ vehicle.make }} {{ vehicle.model }} 
                    </h4>
                    <ul class="card-text">
                        <li>Odometer: {{format_amount vehicle.kilometers }} KM</li>
                        <li>Rego Plate: {{ vehicle.rego }}</li>
                    </ul>
                </div>
            </div>    
            {{/each}}
        </div>
        {{/if}}
        
        <div>
            <a href="./addCarDetails" class="btn btn-dark">Add Car Details</a>
        </div>
    </section>
    

    <section class="card text-center">
        {{#if job.length }}
        <div class="card-header">
            <h3>Service Notes</h3>
        </div>
        
        {{#each job as |job| }}
        <div>
            <h4 class="card-title"> {{ job.date }}</h4>
            <p class="card-text">
            {{ job.note }}
            </p>
        </div>
        {{/each}}
        {{/if}}
    </section>
</main>
